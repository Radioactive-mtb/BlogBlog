<div class="card mb-4">
  <div class="card-header">
    <h4 class="card-title">{{name}}</h4>
    <small class="text-muted">Posted by {{user.name}} on {{format_date date_created }}</small>
  </div>
  <div class="card-body">
    <p class="card-text">{{content}}</p>
  </div>
  <div class="card-footer">
  <div class="comment">
    <form class="form new-comment-form">
        <div class="form-group">
          <div>
            <div>
            <label for="comment-cont">Comment Content</label>
            <input type="hidden" id="post-id" name="post-id" value={{post.id}}/>
            <input type="textArea" class="form-input" id="comment-body" name="comment-body" />
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-danger">comment</button>
        </div>
    </form>
    {{#if post.comments}}
  <div class="card-header">
    {{#each post.comments}}
    <p>
      {{body}}
    </p>
    <small class="text-muted">Posted by {{comment.user.name}} on {{format_date date_created }}</small>
  </div>
  <div class="card-body">
    <p class="card-text">{{content}}</p>
  </div>
  {{/each}}
  {{/if}}
</div>

<script src="/comment.js"></script>
